<%= form_with(model: [@room, task], class: "space-y-4") do |f| %>
  <% if task.errors.any? %>
    <div class="bg-red-50 text-red-700 p-3 rounded">
      <% task.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :name, class: "w-full border border-gray-300 rounded px-3 py-2", autofocus: true %>
  </div>

  <div>
    <%= f.label :decay_period_days, "Decay period (days)", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.number_field :decay_period_days, min: 1, class: "w-full border border-gray-300 rounded px-3 py-2" %>
  </div>

  <div class="flex gap-2">
    <%= f.submit class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 cursor-pointer" %>
    <%= link_to "Cancel", rooms_path, class: "px-4 py-2 text-gray-600 hover:underline" %>
  </div>
<% end %>
